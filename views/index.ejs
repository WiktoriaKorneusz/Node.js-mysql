<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("includes/head", {title: "ReadIt"}) %>
    </head>
    <body class="blue-grey darken-4 blue-grey-text text-lighten-5">
        <%- include("includes/header.ejs") %>
        <main>
            <div class="parallax-container primary-parallax">
                <div class="parallax">
                    <img src="img/background.png" />
                </div>
                <hgroup class="caption center-align container">
                    <h1 class="center">
                        Read<span class="cyan-text">It</span>
                    </h1>
                    <h2 class="center light">
                        Share your favorite books and read reviews for free
                    </h2>
                </hgroup>
            </div>
            <section class="container search-bar">
                <form class="col s12">
                    <div class="row blue-grey lighten-5 search">
                        <div
                            class="col s11 input-field"
                            style="margin-bottom: 0"
                        >
                            <input
                                id="search"
                                type="text"
                                class="blue-grey-text text-darken-4"
                            />
                            <label for="search">Search</label>
                        </div>
                        <div
                            class="col s1 search-btn"
                            style="transform: translateY(50%)"
                        >
                            <button type="submit">
                                <i class="material-icons">search</i>
                            </button>
                        </div>
                    </div>
                </form>
            </section>
            <section>
                <ul class="books-list container">
                    <% for (const review of reviews.reverse()) {%>
                    <li class="book">
                        <div
                            class="card blue-grey darken-4 book-card z-depth-4"
                        >
                            <div class="book-image">
                                <img
                                    src="<%= review.img %>"
                                    alt="book cover"
                                    class="book-cover"
                                />
                            </div>
                            <div class="book-content">
                                <h3><%= review.title %></h3>
                                <h4><%= review.name %></h4>
                                <h5>score: <%= review.score %></h5>
                                <h6>
                                    Date:
                                    <time
                                        datetime="<%= review.date.toISOString() %>"
                                        ><%=
                                        review.date.toLocaleDateString("en-US",
                                        {weekday: "long", year: "numeric",
                                        month: "long", day: "numeric"}) %></time
                                    >
                                </h6>
                                <p><%= review.summary %></p>
                                <h6>~ <%= review.reviewer %></h6>
                            </div>
                            <div class="book-action">
                                <form action="/reviews/<%= review.id %>/delete" method="POST">
                                    <button class="waves-effect waves-light red btn">Delete</button>
                                </form>
                                <a
                                    class="waves-effect waves-light btn green"
                                    href="/reviews/<%= review.id %>/edit"
                                    >Edit</a
                                >
                                <a
                                    class="waves-effect waves-light cyan btn"
                                    href="/reviews/<%= review.id %>"
                                    >Read more</a
                                >
                            </div>
                        </div>
                    </li>
                    <% } %>
                </ul>
            </section>
        </main>
    </body>
</html>
